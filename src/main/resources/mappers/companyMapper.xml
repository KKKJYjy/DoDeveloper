<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper에서 기본 세팅 namespace	반드시 있어야함 (myBatis공식홈 -> ConfigurationXML) -->
<mapper namespace="com.dodeveloper.mappers.companyMapper">

<!-- select문에는 반드시 resultType 결과값을 넣어줘야 VO에 담아줄 수 있다 -->
	<select id="getEntireCompanyInfo" resultType="com.dodeveloper.company.vodto.CompanyInfoVO">
		select * from companyinfo order by companyInfoNo asc
	</select>
	
	<select id="getRevCompanyList" resultType="com.dodeveloper.company.vodto.revCompanyBoardVO">
		select * from companyrevboard where companyInfoNo = #{companyInfoNo}
	</select>
</mapper>    